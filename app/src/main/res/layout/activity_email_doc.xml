<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="16dp"
    android:layout_marginHorizontal="32dp"
    tools:context=".EmailDocActivity">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="16dp"
        android:id="@+id/sign_up_icon"
        android:src="@drawable/baby_logo"/>

    <EditText
        android:id="@+id/etTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_icon"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:hint="Receiver's Email Address!"
        android:inputType="textEmailAddress"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etTo"
        android:layout_margin="5dp"
        android:hint="Enter Subject"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/etSubject"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="top|start"
        android:hint="Provide the description for approval"
        android:inputType="textMultiLine" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btSend"
        android:layout_width="124dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:text="Send"
        android:layout_below="@id/etMessage"
        android:layout_alignParentEnd="true"
        android:textSize="16sp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btAttachment"
        android:layout_width="124dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:text="Attach"
        android:layout_below="@id/etMessage"
        android:layout_alignParentEnd="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btSend"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

</RelativeLayout>
